<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'users/info', user: current_user %>
      <%= render 'books/index', book: @book %>
    </div>
    <div class="col-8">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
                <td><%= user.name %></td>
                <td><%= link_to "show", user_path(user) %></td>
              </tr>
            <% end %>
          </tbody>
        </thead>
      </table>
    </div>
  </div>
</div>