<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-8">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= book.title %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>