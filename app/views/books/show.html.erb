<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'users/info', user: current_user %>
      <%= render 'index', book: @book_new %>
    </div>
    <div class="col-8">
      <h1>Book dateil</h1>
      <table class="table">
        <thead>
          <tr>
            <td><%= image_tag @book.user.get_profile_image, size: "50x50" %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "edit", edit_book_path(@book) %></td>
            <td><%= link_to "destroy", book_path(@book), method: :delete %></td>
          <% end %>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>